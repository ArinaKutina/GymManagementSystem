<Window x:Class="GymManagementApp.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymManagementApp.Views"
        mc:Ignorable="d"
        Title="Вы авторизовались как Администратор" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <StackPanel>
            <Button x:Name="EditClientsButton" Content="Редактирование клиентов" FontSize="36" Height="60" Width="1100" Margin="0 60 0 0" Click="EditClientsButton_Click"  />
            <Button x:Name="EditTrainersButton" Content="Редактирование тренеров" FontSize="36" Height="60" Width="1100" Margin="0 30 0 0" Click="EditTrainersButton_Click"  />
            <Button x:Name="EditApparatusButton" Content="Редактирование тренажеров" FontSize="36" Height="60" Width="1100" Margin="0 30 0 0" Click="EditApparatusButton_Click"  />
            <Button x:Name="ExitButton" Content="Выход" FontSize="36" Height="60" Width="1100" Margin="0 600 0 0" Click="ExitButton_Click"  />
        </StackPanel>
    </Grid>
</Window>
