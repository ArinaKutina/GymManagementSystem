<Window x:Class="GymManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymManagementApp"
        mc:Ignorable="d"
            Title="Авторизация" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <StackPanel Width="700" Margin="610,132,610,-3">
            <TextBlock Text="Авторизация" FontSize="36" HorizontalAlignment="Center" />
            <TextBlock Text="Логин" FontSize="36" />
            <TextBox FontSize="36" BorderBrush="#FF161617" Name="Login"/>
            <TextBlock Text="Пароль" FontSize="36" Margin="0,30,0,0"/>
            <PasswordBox FontSize="36" BorderBrush="#FF161617" Name="Password"/>
            <Button Content="Войти" FontSize="36" Margin="0,30,0,0" Name="EntButton" Click="EntButton_Click" />
            <Button Margin="0 450 0 0" Content="Выход" FontSize="36" x:Name="ExitButton" Click="ExitButton_Click" />
        </StackPanel>
    </Grid>
</Window>
